# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Stripe Configuration (LIVE MODE)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here
VITE_STRIPE_CONNECT_CLIENT_ID=ca_your_live_connect_client_id_here

# Server-only Stripe secrets (DO NOT expose via VITE_* or frontend bundles)
STRIPE_SECRET_KEY=sk_live_your_live_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Server-only Supabase secret (DO NOT expose via VITE_* or frontend bundles)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Application Configuration
VITE_APP_NAME="Theramate"
VITE_APP_VERSION="1.0.0"
VITE_APP_DOMAIN="peercareconnect.com"

# API Configuration
VITE_API_URL=https://api.peercareconnect.com

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG_LOGGING=false
VITE_ENABLE_PAYMENT_DEMO=false

# Security
VITE_HTTPS_REQUIRED=true
VITE_STRIPE_LIVE_MODE=true
